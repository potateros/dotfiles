" Indentation
set expandtab       " convert tabs to spaces
set shiftround      " rounds indent to nearest multiple
set shiftwidth=2    " shifting tab spaces
set smarttab        " insert tabstop spaces when tabbing
set tabstop=2       " indent size

" Search
"set hlsearch        " search highlighting
set ignorecase      " ignores case...
set smartcase       " ...unless search term contains uppercase

" Text Rendering
set scrolloff=2     " space to keep above and below cursor
syntax enable       " enables syntax highlighting
colorscheme slate   " colorscheme

" UI
set laststatus=2    " always show status bar
set ruler           " always show cursor postition
set cursorline      " highlight current line
set number          " show line numbers
set mouse=a         " enabled mouse scrolling
set confirm         " displays confirmation dialog when quitting

" Editing
set history=100
